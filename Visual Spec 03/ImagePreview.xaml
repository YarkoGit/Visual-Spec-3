<Window x:Class="Visual_Spec_03.ImagePreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual_Spec_03"
        mc:Ignorable="d"
        Title="ImagePreview" Height="1368" Width="768" Background="White" WindowState="Maximized" WindowStartupLocation="CenterScreen" MouseLeftButtonUp="Window_MouseLeftButtonUp" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox x:Name="viewBoxImagePreview" Margin="5" MouseLeftButtonUp="viewBoxImagePreview_MouseLeftButtonUp" Grid.Row="1"/>
        <Image x:Name="imageFullScreen" Margin="5" Grid.Row="1"/>
        <Label x:Name="labelPointName" VerticalContentAlignment="Center" FontSize="25" BorderBrush="#FF939393" BorderThickness="0,0,0,1" Background="Black" Foreground="#FFCACACA" FontWeight="Medium" Padding="15,0,0,0" Content=""/>

    </Grid>
</Window>
