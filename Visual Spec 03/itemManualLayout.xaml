<UserControl x:Class="Visual_Spec_03.itemManualLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Visual_Spec_03"
             mc:Ignorable="d" d:DesignWidth="300" Height="597" Width="770">
    <Grid>
        <ListView x:Name="listViewManual" SelectionChanged="listViewManual_SelectionChanged" Foreground="Black" FontSize="18" PreviewMouseLeftButtonUp="listView_Click">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Part NO" DisplayMemberBinding="{Binding PartNO}"/>
                    <GridViewColumn Header="Spec" DisplayMemberBinding="{Binding Spec}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
